# Production Environment Configuration
# Copy this file to .env and fill in your production values

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/food_delivery
# For production, use MongoDB Atlas or similar:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/food_delivery?retryWrites=true&w=majority

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRE=30d
JWT_REFRESH_EXPIRE=7d

# Client URL (Your frontend domain)
CLIENT_URL=https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=5mb
UPLOAD_PATH=./uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_NAME=Food Delivery System
FROM_EMAIL=noreply@yourdomain.com

# Cloudinary Configuration (for image storage)
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Payment Gateway Configuration
# Stripe
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# SMS & WhatsApp Configuration (Twilio)
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_PHONE=your_twilio_phone_number

# Push Notifications (Firebase)
FCM_SERVER_KEY=your_fcm_server_key

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Commission Rates (in percentage)
RESTAURANT_COMMISSION=15
DELIVERY_COMMISSION=20

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
